<Window x:Class="RoslynPadWrapperApiSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoslynPadWrapperApiSample"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:editor="clr-namespace:RoslynPad.Editor;assembly=RoslynPad.Editor.Windows"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <editor:RoslynCodeEditor 
            Name="Editor"
            FontSize="24"
            WordWrap="True" Loaded="OnEditorLoaded">
        </editor:RoslynCodeEditor>
    </Grid>
</Window>
